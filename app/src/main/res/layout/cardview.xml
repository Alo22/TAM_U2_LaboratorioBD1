<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#FFC107"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/buscar"
                android:layout_width="78dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/signo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/edi"
                android:layout_width="78dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/conta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#1D1A1A"
                android:layout_marginTop="30dp"
                android:text="Conductor:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/edi"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="86dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:text="Licencia:"
                android:textColor="#1D1A1A"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/edi"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Monto:"
                android:textColor="#1D1A1A"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/edi"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:text="Puntos:"
                android:textColor="#1D1A1A"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/edi"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Celular:"
                android:textColor="#1D1A1A"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/edi"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView100"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:text="Email:"
                android:textColor="#1D1A1A"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/edi"
                app:layout_constraintTop_toBottomOf="@+id/textView44" />
            //cajas de texto

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:text="id"
                android:textColor="#CFB7B7"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lic"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="Numero"
                android:textColor="#CFB7B7"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/id" />

            <TextView
                android:id="@+id/monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cantidad"
                android:textColor="#CFB7B7"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/lic"
                app:layout_constraintTop_toBottomOf="@+id/lic" />

            <TextView
                android:id="@+id/puntos"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:text="Cantidad"
                android:textColor="#CFB7B7"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/monto"
                app:layout_constraintTop_toBottomOf="@+id/monto" />

            <TextView
                android:id="@+id/cel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Celular"
                android:textColor="#CFB7B7"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/puntos"
                app:layout_constraintTop_toBottomOf="@+id/puntos" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:text="Email:"
                android:textColor="#C93737"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/cel"
                app:layout_constraintTop_toBottomOf="@+id/cel" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>